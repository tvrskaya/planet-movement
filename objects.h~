#pragma once

struct planet {
  float m;
  float x;
  float y;
};

struct floatObject {
  float x;
  float y;
  float vx;
  float vy;
};

void initPlanet(struct planet *p, const float m, const float x, const float y)
{
  p->m = m;
  p->x = x;
  p->y = y;
}

void initObject(struct floatObject *obj, const float x, const float y,
		const float vx, const float vy)
{
  obj->x = x;
  obj->y = y;
  obj->vx = vx;
  obj->vy = vy;
}
